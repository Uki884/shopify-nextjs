{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../dist",
    "baseUrl": "./",
    "target": "es2017",
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules",
    "src",
    ".next",
    "dist"
  ]
}